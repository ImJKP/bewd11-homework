<div class="container">
	<div class="margin-top-20">
	  <% if flash[:error] %>
	    <div class="alert alert-danger">
	      <%= flash[:error] %>
	    </div>
	  <% end %>
		<a href="#" data-toggle="modal" data-target="#add-book-modal" class="btn btn-primary">Add New Book</a>
	</div>
	<!--One Book-->
<% @books.each do |book| %>
	<div class="row margin-top-20 book-container">
		<div class="col-sm-3">
			<img src="<%= book.cover %>" class="img-responsive" />
		</div>
		<div class="col-sm-9">
			<div class="margin-top-20">
				<span class="bold">Title: </span><span><%= book.title %></span>
			</div>
			<div>
				<span class="bold">Author: </span><span><%= book.author %></span>
			</div>
			<div>
				<span class="bold">Release Date: </span><span><%= book.release_date %></span>
			</div>
			<div class="margin-top-20">
        <button class="btn btn-default"><%= link_to "Edit Book", edit_book_path(book) %></button>
        <button class="btn btn-default"><%= link_to "See/Add Stores", book_stores_path(book) %></button>
        
			</div>
		</div>
		
	</div>
<% end %>
	<!--/One Book-->
</div>

<!--Add Book Modal-->
<div id="add-book-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add New Book</h4>
			</div>
			<div class="modal-body">
        <%= form_for @book do |f| %>
				<div class="bold">
					Title
				</div>
				<div class="margin-top-20">
					<%= f.text_field :title, :class=> "form-control", :placeholder => "Good Night Moon" %>
				</div>
				<div class="bold margin-top-20">
					Author
				</div>
				<div class="margin-top-20">
					<%= f.text_field :author, :class => "form-control", :placeholder => "Ronald McDonald" %>
				</div>
				<div class="bold margin-top-20">
					Release Date
				</div>
				<div class="margin-top-20">
					<%= f.text_field :release_date, :class => "form-control", :placeholder => "June 1, 1843" %>
				</div>
				<div class="bold margin-top-20">
					Image
				</div>
				<div class="margin-top-20">
					<%= f.text_field :cover, :class => "form-control", :placeholder => "http://..." %>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save Book</button>
			<% end %>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/Add Book Modal-->

